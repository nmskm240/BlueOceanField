# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Tab indentation
[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# The indent size used in the `package.json` file cannot be changed
# https://github.com/npm/npm/pull/3180#issuecomment-16336516
[{.travis.yml,npm-shrinkwrap.json,package.json}]
indent_style = space
indent_size = 4

[*.proto]
# Ensure proper indentation and spacing for Protobuf syntax
indent_style = space
indent_size = 2
max_line_length = 120  # or 80 depending on your preference

[*.yaml]
indent_size = 2
indent_style = space

# Enable trailing newlines and proper formatting
trim_trailing_whitespace = true
insert_final_newline = true

# No tabs, space-based indentation
tab_width = 2
